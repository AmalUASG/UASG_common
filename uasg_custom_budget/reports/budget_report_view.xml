<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_budget_pivot" model="ir.ui.view">
            <field name="name">report.budget.pivot</field>
            <field name="model">reportbudget</field>
            <field name="arch" type="xml">
                <pivot string="Budget Analysis" display_quantity="1" sample="1">
                    <field name="budget_id" type="row"/>
                </pivot>
            </field>
        </record>

